<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBEB"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#D4D4D4"
            android:padding="6dp"
            android:text="2016-7-30 16:44:44"
            android:textColor="@color/white" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:background="#C7C7C7"
        android:orientation="vertical"
        android:padding="1dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/parent1"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:padding="8dp">


                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/news_img_0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#C7C7C7"
                    fresco:placeholderImageScaleType="fitCenter"/>


                <TextView
                    android:id="@+id/title1"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_alignParentBottom="true"
                    android:background="#7e000000"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="中国对癌症治疗做出重大突破,中国对癌症治疗做出重大突破"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_medium" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C7C7C7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/parent2"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">


                    <TextView
                        android:id="@+id/title2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp"
                        android:maxLines="2"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_medium"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:text="四川峨眉山一铁索桥突然断裂侧翻 多人落到桥下"
                        android:ellipsize="end"
                        android:layout_toLeftOf="@+id/news_img_1"/>


                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/news_img_1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="#C7C7C7"
                        android:padding="0.5dp"
                        fresco:placeholderImageScaleType="fitCenter"
                       />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#C7C7C7" />

                <RelativeLayout
                    android:id="@+id/parent3"
                    android:visibility="gone"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">


                    <TextView
                        android:id="@+id/title3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp"
                        android:maxLines="2"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_medium"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:text="四川峨眉山一铁索桥突然断裂侧翻 多人落到桥下"
                        android:ellipsize="end"
                        android:layout_toLeftOf="@+id/news_img_2"/>


                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/news_img_2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="#C7C7C7"
                        android:padding="0.5dp"
                        fresco:placeholderImageScaleType="fitCenter"
                        />


                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>