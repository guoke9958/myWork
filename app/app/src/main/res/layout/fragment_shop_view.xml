<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_recommend"
    android:orientation="vertical">


   <LinearLayout
       android:layout_marginTop="130dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:orientation="horizontal">

       <ImageView
           android:layout_width="128dp"
           android:layout_height="140dp"
           android:layout_marginRight="10dp"
            android:src="@mipmap/icon_shop_drug_recommend"
           />

       <ImageView
           android:layout_width="128dp"
           android:layout_height="140dp"
           android:src="@mipmap/icon_shop_medical_equipmen_recommend"
           />


   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="128dp"
            android:layout_height="140dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_shop_local_specialty_recommend"
            />

        <ImageView
            android:layout_width="128dp"
            android:layout_height="140dp"
            android:src="@mipmap/icon_shop_health_care_recommend"
            />



    </LinearLayout>



</LinearLayout>