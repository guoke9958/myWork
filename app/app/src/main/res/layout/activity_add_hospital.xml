<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="#FDFAF3"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingLeft="18dp"
        android:paddingRight="18dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="医院名称:"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/hospital_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入医院名称"
            android:maxLength="20"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:textColor="#000000"
            android:textSize="14sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingLeft="18dp"
        android:paddingRight="18dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="医院级别    :"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/hospital_grade"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请选择医院级别"
            android:focusable="false"
            android:maxLength="20"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:textColor="#000000"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingLeft="18dp"
        android:paddingRight="18dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="医院所在省:"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/hospital_province"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请选择医院所在省"
            android:focusable="false"
            android:maxLength="20"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:textColor="#000000"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingLeft="18dp"
        android:paddingRight="18dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="医院所在市:"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/hospital_city"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:focusable="false"
            android:gravity="center_vertical"
            android:hint="请选择医院所在市"
            android:maxLength="20"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:textColor="#000000"
            android:textSize="14sp" />

    </LinearLayout>


    <Button
        android:id="@+id/send_btn"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/login_register_btn_height"
        android:layout_marginTop="60.0dip"
        android:background="@drawable/btn_corners_rose"
        android:enabled="false"
        android:text="提交信息"
        android:textColor="@color/white"
        android:textSize="@dimen/text_verysmall" />


</LinearLayout>