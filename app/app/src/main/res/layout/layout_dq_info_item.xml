<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/item_pic"
        android:layout_width="40.0dip"
        android:layout_height="40.0dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/normal_pacing"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@mipmap/dq_pay_one" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/normal_pacing"
        android:layout_marginLeft="@dimen/half_normal_pacing"
        android:layout_marginTop="@dimen/normal_pacing"
        android:layout_toRightOf="@+id/item_pic"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_grey"
            android:text="500点券"
            android:textSize="@dimen/head_line_text_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:textColor="@color/light_grey"
                android:text="手滑一下"
                android:textSize="@dimen/normal_text_size" />

            <TextView
                android:id="@+id/tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginTop="5.0dip"
                android:visibility="gone"
                android:paddingLeft="6.0dip"
                android:paddingRight="5.0dip"
                android:textColor="@color/white"
                android:textSize="11.0sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/price"
        android:layout_width="80.0dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/normal_pacing"
        android:layout_marginLeft="5.0dip"
        android:background="@drawable/ellipse_btn_orange"
        android:gravity="center"
        android:paddingBottom="5.0dip"
        android:text="¥ 5"
        android:paddingTop="5.0dip"
        android:textColor="@color/white"
        android:textSize="@dimen/head_line_text_size" />
</RelativeLayout>