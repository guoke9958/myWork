<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/disable_background" />
            <stroke android:width="0.0dip" android:color="@android:color/transparent" />
            <corners android:radius="3.0dip" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_checked="false" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_bg_green" />
            <stroke android:width="0.0dip" android:color="@android:color/transparent" />
            <corners android:radius="3.0dip" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_font_green" />
            <stroke android:width="0.0dip" android:color="@android:color/transparent" />
            <corners android:radius="3.0dip" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_btn_rose_press" />
            <stroke android:width="0.0dip" android:color="@android:color/transparent" />
            <corners android:radius="3.0dip" />
        </shape>
    </item>
</selector>