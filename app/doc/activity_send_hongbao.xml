<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFAF3"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="点券数必须为10的倍数"
        android:textColor="@android:color/holo_red_light" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/single_hongbao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="单个红包"
            android:textColor="#000000"
            android:textSize="16sp" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@+id/right_dianquan"
            android:layout_toRightOf="@+id/single_hongbao"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:inputType="number"
            android:maxLength="10"
            android:digits="0123456789"
            android:singleLine="true"
            android:textColor="#000000" />


        <TextView
            android:id="@+id/right_dianquan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="点券"
            android:textColor="#000000"
            android:textSize="16sp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="48dp"
        android:paddingRight="18dp"
        android:paddingLeft="18dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/liuyan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="留言"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/right_dianquan"
            android:layout_toRightOf="@+id/single_hongbao"
            android:background="@null"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical|right"
            android:hint="恭喜发财，大吉大利！"
            android:maxLength="25"
            android:maxLines="2"
            android:textSize="14sp"
            android:textColor="#000000" />


    </LinearLayout>


    <TextView
        android:id="@+id/dianquan_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="48dp"
        android:text="0 券"
        android:textColor="#000000"
        android:textSize="30sp" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:enabled="false"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:background="@drawable/btn_register_onclick_selector"
        android:text="发送红包"/>



</LinearLayout>